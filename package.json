{
  "name": "react-sketchapp",
  "version": "0.5.0",
  "description": "A React renderer for Sketch.app",
  "main": "lib/index.js",
  "license": "MIT",
  "author": "Jon Gold <jon.gold@airbnb.com> (http://jon.gold)",
  "contributors": [
    "Ben Wilkins <ben.wilkins@airbnb.com>",
    "Leland Richardson <leland.richardson@airbnb.com>"
  ],
  "files": [
    "lib"
  ],
  "scripts": {
    "build:plugin": "webpack -c",
    "build:react": "babel src -d lib",
    "build:flow": "flow-copy-source -v -i '**/__tests__/**' src lib",
    "build": "npm run build:react && npm run build:plugin",
    "clean": "rimraf lib react-example.sketchplugin",
    "check": "npm run flow && npm run lint",
    "docs:clean": "rimraf _book",
    "docs:prepare": "gitbook install",
    "docs:build": "npm run docs:prepare && gitbook build",
    "docs:watch": "npm run docs:prepare && gitbook serve",
    "docs:publish": "npm run docs:clean && npm run docs:build && cd _book && git init && git commit --allow-empty -m 'update book' && git fetch git@github.com:jongold/react-sketchapp.git gh-pages && git checkout -b gh-pages && git add . && git commit -am 'update book' && git push git@github.com:jongold/react-sketchapp.git gh-pages --force",
    "flow": "flow",
    "lint": "eslint .",
    "prepublish": "npm run clean && npm run check && npm run build",
    "test": "mocha --compilers js:babel-core/register",
    "watch:plugin": "webpack --watch",
    "watch:react": "babel src -d lib --watch",
    "watch": "npm run watch:react & npm run watch:plugin"
  },
  "dependencies": {
    "css-layout": "^1.1.1"
  },
  "peerDependencies": {
    "react": "*",
    "react-test-renderer": "*"
  },
  "keywords": [
    "sketch",
    "sketchapp",
    "react",
    "reactjs",
    "renderer"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jongold/react-sketchapp"
  },
  "bugs": {
    "url": "https://github.com/jongold/react-sketchapp/issues"
  },
  "homepage": "https://github.com/jongold/react-sketchapp",
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-core": "^6.0.0",
    "babel-eslint": "^7.1.0",
    "babel-loader": "^6.2.7",
    "babel-plugin-transform-flow-strip-types": "^6.18.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-0": "^6.16.0",
    "chai": "^3.5.0",
    "color": "^1.0.1",
    "copy-webpack-plugin": "^4.0.1",
    "eslint": "^3.9.1",
    "eslint-config-airbnb": "^12.0.0",
    "eslint-plugin-import": "^1.16.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.4.1",
    "flow-bin": "^0.36.0",
    "flow-copy-source": "^1.1.0",
    "gitbook-cli": "^2.3.0",
    "json-loader": "^0.5.4",
    "mocha": "^3.2.0",
    "react": "^15.4.1",
    "react-test-renderer": "^15.4.1",
    "rimraf": "^2.5.4",
    "webpack": "^1.13.3"
  }
}
